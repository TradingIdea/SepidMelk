<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SepidMelk.MVVM.Views.RegisterPageView"
              x:Name="mainPageView"
             Title="RegisterPageView">

    <ActivityIndicator 
   Color="Blue"
   IsRunning="{Binding IsBusy, Source={x:Reference Name=mainPageView}}"
   IsVisible="{Binding IsBusy, Source={x:Reference Name=mainPageView}}"
   VerticalOptions="Center"
   HorizontalOptions="Center"/>

    <Grid RowDefinitions=".14*,.1*,.84*" Padding="0" FlowDirection="LeftToRight">

        <Frame Grid.Row="0" Grid.ColumnSpan="5" BackgroundColor="#528ed6" >
            <Label Text="سپید ملک     sepidmelk.ir" VerticalTextAlignment="Center" TextColor="White"
                   HorizontalTextAlignment="Center" FontAttributes="Bold" FontSize="22" Padding="0"/>
        </Frame>

        <Grid Grid.Row="1" ColumnDefinitions=".25*,.27*,.25*,.27*" Grid.ColumnSpan="4"  Padding="0">

            <Frame   Grid.ColumnSpan="1" Padding="0">
                <Entry Text="{Binding phone}" HorizontalTextAlignment="Center" />
            </Frame>
            <Frame Grid.Column="1" Grid.ColumnSpan="1" Padding="0" >
                <Label Text="شماره موبایل"  TextColor="IndianRed" WidthRequest="90" VerticalOptions="End"  FontSize="12" FontAttributes="Bold" Padding="10"/>
            </Frame>
            <Frame Grid.Column="2" Grid.ColumnSpan="1" Padding="0">
                <Entry  Text="{Binding fullName}" HorizontalTextAlignment="Center"/>
            </Frame>
            <Frame Grid.Column="3" Grid.ColumnSpan="1" Padding="0" HorizontalOptions="End">
                <Label Text="کاربری"  TextColor="IndianRed" WidthRequest="80" VerticalOptions="Center" HorizontalOptions="End" HorizontalTextAlignment="End" FontSize="12" FontAttributes="Bold" Padding="10"/>
            </Frame>

        </Grid>

        <Grid Grid.Row="2" RowDefinitions=".5*,.5*"  ColumnDefinitions=".25*,.25*" Padding="0">


            <Grid Grid.Row="0" ColumnDefinitions=".5*,.5*" Grid.ColumnSpan="4"  Padding="0">
                <Frame Grid.Column="0" Grid.ColumnSpan="1" Padding="0"  FlowDirection="RightToLeft" >
                    <CollectionView  x:Name="list" 
                     ItemsSource="{Binding numbersData}" 
                     SelectionMode="Single"
                     EmptyView=" هیچ شماره آگهی یافت نشد!" 
                     Margin="0,10" >
                        
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="5"  Orientation="Vertical"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate  x:Name="dt" >
                                <Label Text="{Binding num}" Padding="5,3"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
                <Frame   Grid.Column="1" Grid.ColumnSpan="1" Padding="0">
                    <Grid ColumnDefinitions=".5*,.5*">
                        <Button  Text="افزودن به لیست"  Margin="10,6,0,0" FontSize="11" HorizontalOptions="Center" VerticalOptions="Start" Command="{Binding BtnAddNumberCommand}"/>
                        <Entry Grid.Column="1" Placeholder="شماره آگهی"  FontSize="11" HorizontalTextAlignment="Center" VerticalOptions="Start"  Margin="6,6" Text="{Binding entryNum}" />
                    </Grid>
                </Frame>
            </Grid>


            <Grid Grid.Row="1"  Grid.ColumnSpan="2" Margin="0,5"  Padding="0">
              
                
                    <Button FontSize="15" Text="ثبت نام" VerticalOptions="Start" HorizontalOptions="Center" TextColor="White" HeightRequest="50" Command="{Binding BtnCommand}" ></Button>
           
            </Grid>

        
        

        </Grid>










    </Grid>
</ContentPage>